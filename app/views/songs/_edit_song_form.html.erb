<%= form_tag({:action => 'update', :artist_to_be_updated => @artist_to_be_updated, :song_id => @song, :artist_id => @artist}) do %>

<%= error_messages_for(@song) %>
  
  <div class="form-group">
    <%= label_tag :title, 'Title: ' %>
    <%= text_field(:song, :title) %>
  </div>
  <div class="form-group">
    <%= label_tag :artist, 'Artist: ' %>
    <%= text_field(:artist, :artist) %>
  </div>
  <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
    <span class="glyphicon glyphicon-pencil"></span> Edit Song
  <% end %>

<% end %>

<%= form_tag({:action => 'delete', :song_id => @song, :artist_id => @artist}) do %><br>

  <%= button_tag(type: 'submit', class: "btn btn-danger") do %>
    <span class="glyphicon glyphicon-remove"></span> Delete Song
  <% end %>

<% end %>