<div class="modal fade" id="edit-song-modal">
  <div class="modal-dialog">
    <div class="modal-content main-content text-center">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <p class="h2 m-0"><i><b>Edit Song</b></i></p>
      </div>
      <div class="modal-body">
      
      <%= form_tag({:action => 'update'}) do %>
        
        <div class="form-group">
          <label for="song">Song: </label>
          <%= text_field(:song, :title) %>
        </div>
        <div class="form-group">
          <label for="artist">Artist: </label>
          <%= text_field(:artist, :artist) %>
        </div>
        <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
          <span class="glyphicon glyphicon-pencil"></span> Edit Song
        <% end %>

      <% end %>

      <%= form_tag({:action => 'destroy'}) do %><br>

        <%= button_tag(type: 'submit', class: "btn btn-danger") do %>
          <span class="glyphicon glyphicon-remove"></span> Delete Song
        <% end %>

      <% end %>
      
      </div>
    </div>          
  </div>
</div>