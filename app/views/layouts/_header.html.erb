<!--[if gt IE 8]><!--> <html class="no-js" lang=""> <!--<![endif]-->
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>Mattchet Music</title>
    <meta property="og:description" content="Thee's Music App" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
        
    <%= stylesheet_link_tag('application', :media => 'all') %>

  </head>
  <body>
        
    <% if !flash[:notice].blank? %>
      <div class="notice">
        <%= flash[:notice].html_safe %>
      </div>
    <% end %>

    <%= render(:partial => "add_song_modal") %>
    <%= render(:partial => "edit_song_modal") %>
        
    <header>
      <div class="container">
        <p class="text-center p-top-10 col-xs-12" id="logo">
          <span class="vert-middle"><%= image_tag('logo.png', :alt => 'logo', :style => [ 'height:1.5em;']) %> <b>MATTCHET MUSIC</b></span>
        </p>
        <nav>
          <ul class="list-unstyled text-center col-xs-12">
            <%= link_to('<li class="inline-block p-10">Add Track</li>'.html_safe, "#add-song-modal", "data-toggle" => "modal") %>
            <li class="inline-block p-10"><span class="glyphicon glyphicon-chevron-down"></span> Playlists
              <ul>
                <li>All</li>
                <li>Thee's Party Mix</li>
                <li>Old School Hip Hop</li>
              </ul>
            </li>
          </ul>
        </nav>
      </div>
    </header>