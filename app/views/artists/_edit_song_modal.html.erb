<div class="modal fade" id="edit-song-modal">
  <div class="modal-dialog">
    <div class="modal-content main-content text-center">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <p class="h2 m-0"><i><b>Edit Song</b></i></p>
      </div>
      <div class="modal-body">
      
      <%= form_tag({:action => 'edit_song'}) do %>
        
        <div class="form-group">
          <label for="song">Song: </label>
          <%= text_field(:song, :title) %>
        </div>
        <div class="form-group">
          <label for="artist">Artist: </label>
          <%= text_field(:artist, :artist) %>
        </div>
        <%= submit_tag("Edit Song") %>

      <% end %>
      </div>
    </div>          
  </div>
</div>